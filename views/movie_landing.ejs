<% for(var i=0;i<result.length;i++){
%><div class="col-xs-18 col-sm-4 col-md-2 thumbnails">
        <div class="thumbnail" style=" background-color:#c1ebf5">
          <form method="GET" action="/details">
          <input type="number" id="num" value="<%=i%>" placeholder="<%=i%>" disabled>
        </form>
          <a onclick="openForm('<%=i%>')"><img id="image" src="<%=result[i].mv_image%>" /></a>
          
        </div>

      </div>

<%} %>
      
   

<div class="form-popup" id="myForm">
  <div class="form-container">

    <b><h2 id="mvname" align="center"></h2></b>
    <h4 id="lang" align="left" ></h4>
    <h4 id="rating"></h4>
    <i><p id="desc"></p></i>
    
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>

  </div>
</div>

<script>

function openForm(a) {
 
  var moviename,des,l,r;
  <%for(var i=0;i<result.length;i++){%>
  if(a==<%=i%>){
	  moviename= "<%= String(result[i].mvname) %>";
	  des= "<%= String(result[i].mv_desc) %>";
	  l= "<%= String(result[i].mv_lang) %>";
	  r= "<%= String(result[i].mv_rating) %>";
  }
	<%}%>
  console.log(moviename);
    
  document.getElementById("myForm").style.display = "block";
  document.getElementById("mvname").innerHTML=String(moviename);
  document.getElementById("desc").innerHTML=String(des);
  document.getElementById("lang").innerHTML=String(l);
  document.getElementById("rating").innerHTML=String(r);
  
    
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}
</script>

</body>
</html>